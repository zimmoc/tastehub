{
    "extends": "stylelint-config-standard",
    "rules": {
        "color-function-notation": "legacy",
        "selector-class-pattern": [
            "^[a-zA-Z][a-zA-Z0-9]+$",
            {
                "message": "Expected class selector to be camelCase or PascalCase"
            }
        ]
    }
}